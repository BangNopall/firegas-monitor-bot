{
  "name": "firegas-monitor-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for monitoring fire and gas alarms",
  "main": "src/index.ts",
  "author": "BangNopall (https://github.com/BangNopall)",
  "homepage": "https://github.com/BangNopall/firegas-monitor-bot",
  "dependencies": {
    "@vercel/node": "^5.1.16",
    "dotenv-cli": "^8.0.0",
    "mqtt": "^5.14.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.8.6",
    "@vercel/ncc": "^0.38.2",
    "debug": "^4.3.7",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "dev": "DEBUG=bot* dotenv -- nodemon -e ts -x ts-node src/index.ts",
    "devWindows": "@powershell -Command $env:DEBUG='bot*';dotenv -- -- nodemon -e ts -x ts-node src/index.ts",
    "build": "ncc build src/index.ts -o public -m",
    "prettier": "prettier --write 'src/**/*.ts'",
    "start": "NODE_ENV=production DEBUG=bot* dotenv -- node -r ts-node/register src/index.ts",
    "lint": "tsc --noemit"
  }
}
